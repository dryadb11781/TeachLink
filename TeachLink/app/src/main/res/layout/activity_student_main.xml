<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFE6D9"
    tools:context="com.example.a303.teachlink.StudentMain">

    <TextView
        android:id="@+id/TV_Student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/Student"
        android:textSize="22dp"/>

    <ImageButton
        android:id="@+id/IB_S_Discuss"
        android:layout_width="140sp"
        android:layout_height="140sp"
        android:layout_below="@id/TV_Student"
        android:src="@drawable/discussion"
        android:scaleType="centerInside"
        android:layout_marginLeft="22dp"/>


    <ImageButton
        android:id="@+id/IB_S_Question"
        android:layout_width="140sp"
        android:layout_height="140sp"
        android:layout_below="@id/TV_Student"
        android:layout_toRightOf="@+id/IB_S_Discuss"
        android:src="@drawable/question"
        android:scaleType="centerInside"
        />

    <ImageButton
        android:id="@+id/IB_S_Rollcall"
        android:layout_width="280sp"
        android:layout_height="140sp"
        android:layout_below="@id/IB_S_Discuss"
        android:src="@drawable/sign_in"
        android:scaleType="centerInside"
        android:layout_marginLeft="22dp"/>


    <ImageButton
        android:id="@+id/IB_S_Analyze"
        android:layout_width="140sp"
        android:layout_height="140sp"
        android:src="@drawable/studet_analysis"
        android:scaleType="centerInside"
        android:layout_below="@id/IB_S_Rollcall"
        android:layout_marginLeft="22dp"/>

    <ImageButton
        android:id="@+id/IB_S_History"
        android:layout_width="140sp"
        android:layout_height="140sp"
        android:src="@drawable/history"
        android:scaleType="centerInside"
        android:layout_below="@id/IB_S_Rollcall"
        android:layout_toRightOf="@+id/IB_S_Analyze"
     />


</RelativeLayout>
